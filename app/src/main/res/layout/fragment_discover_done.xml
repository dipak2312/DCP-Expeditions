<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".Home.DiscoverDoneFragment">

    <FrameLayout
        android:id="@+id/discover_fram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/success"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/margin_165"
                    android:layout_height="@dimen/margin_150"
                    android:src="@drawable/success" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/success"
                android:layout_marginStart="@dimen/margin_25"
                android:layout_marginEnd="@dimen/margin_25"
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/you_re_almost_done"
                    android:fontFamily="@font/aller"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aller"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/margin_10"
                    android:gravity="center"
                    android:textSize="@dimen/text_size12"
                    android:text="@string/membership_des"/>

            </LinearLayout>

            <TableRow
                android:id="@+id/tabla_cabecera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/done"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_20"
                android:layout_marginTop="20dp">

                <TableLayout
                    android:id="@+id/tabla_cuerpo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:textSize="@dimen/text_size12"
                            android:background="@drawable/border_grey"
                            android:layout_weight="0.4"
                            android:textColor="@color/white"
                            android:fontFamily="@font/aller"
                            android:text="@string/order"
                            android:textAppearance="?android:attr/textAppearanceMedium">

                        </TextView>

                        <TextView
                            android:id="@+id/txt_order_id"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:padding="5dp"
                            android:fontFamily="@font/aller"
                            android:background="@drawable/border_grey"
                            android:text="@string/blank"
                            android:textSize="@dimen/text_size12"
                            android:gravity="center"
                            android:layout_weight="0.6"
                            android:textColor="@color/white"
                            android:textAppearance="?android:attr/textAppearanceMedium">

                        </TextView>



                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:background="@drawable/border_grey"
                            android:gravity="center"
                            android:textSize="@dimen/text_size12"
                            android:layout_weight="0.4"
                            android:textColor="@color/white"
                            android:fontFamily="@font/aller"
                            android:text="@string/full_name"
                            android:textAppearance="?android:attr/textAppearanceMedium">

                        </TextView>

                        <TextView
                            android:id="@+id/txt_full_name"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:background="@drawable/border_grey"
                            android:padding="5dp"
                            android:fontFamily="@font/aller"
                            android:text="@string/blank"
                            android:textSize="@dimen/text_size12"
                            android:gravity="center"
                            android:layout_weight="0.6"
                            android:textColor="@color/white"
                            android:textAppearance="?android:attr/textAppearanceMedium">

                        </TextView>



                    </TableRow>


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:background="@drawable/border_grey"
                            android:gravity="center"
                            android:textSize="@dimen/text_size12"
                            android:layout_weight="0.4"
                            android:textColor="@color/white"
                            android:fontFamily="@font/aller"
                            android:text="@string/mobile_no"
                            android:textAppearance="?android:attr/textAppearanceMedium">

                        </TextView>

                        <TextView
                            android:id="@+id/txt_mobile_no"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:background="@drawable/border_grey"
                            android:padding="5dp"
                            android:fontFamily="@font/aller"
                            android:text="@string/blank"
                            android:textSize="@dimen/text_size12"
                            android:gravity="center"
                            android:layout_weight="0.6"
                            android:textColor="@color/white"
                            android:textAppearance="?android:attr/textAppearanceMedium">

                        </TextView>



                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1">

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:background="@drawable/border_grey"
                            android:gravity="center"
                            android:textSize="@dimen/text_size12"
                            android:layout_weight="0.4"
                            android:textColor="@color/white"
                            android:fontFamily="@font/aller"
                            android:text="@string/email_id"
                            android:textAppearance="?android:attr/textAppearanceMedium">

                        </TextView>

                        <TextView
                            android:id="@+id/txt_email_id"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:background="@drawable/border_grey"
                            android:padding="5dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/aller"
                            android:text="@string/blank"
                            android:textSize="@dimen/text_size12"
                            android:gravity="center"
                            android:layout_weight="0.6"
                            android:textColor="@color/white"
                            android:textAppearance="?android:attr/textAppearanceMedium">

                        </TextView>



                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:background="@drawable/border_grey"
                            android:gravity="center"
                            android:textSize="@dimen/text_size12"
                            android:layout_weight="0.4"
                            android:textColor="@color/white"
                            android:fontFamily="@font/aller"
                            android:text="@string/addresses"
                            android:textAppearance="?android:attr/textAppearanceMedium">

                        </TextView>

                        <TextView
                            android:id="@+id/txt_address"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:background="@drawable/border_grey"
                            android:padding="5dp"
                            android:fontFamily="@font/aller"
                            android:text="@string/line"
                            android:textSize="@dimen/text_size12"
                            android:gravity="center"
                            android:layout_weight="0.6"
                            android:textColor="@color/white"
                            android:textAppearance="?android:attr/textAppearanceMedium">

                        </TextView>


                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:background="@drawable/border_grey"
                            android:gravity="center"
                            android:textSize="@dimen/text_size12"
                            android:layout_weight="0.4"
                            android:textColor="@color/white"
                            android:fontFamily="@font/aller"
                            android:text="@string/city"
                            android:textAppearance="?android:attr/textAppearanceMedium">

                        </TextView>

                        <TextView
                            android:id="@+id/txt_city"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:background="@drawable/border_grey"
                            android:padding="5dp"
                            android:fontFamily="@font/aller"
                            android:text="@string/blank"
                            android:textSize="@dimen/text_size12"
                            android:gravity="center"
                            android:layout_weight="0.6"
                            android:textColor="@color/white"
                            android:textAppearance="?android:attr/textAppearanceMedium">

                        </TextView>



                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:background="@drawable/border_grey"
                            android:gravity="center"
                            android:textSize="@dimen/text_size12"
                            android:layout_weight="0.4"
                            android:textColor="@color/white"
                            android:fontFamily="@font/aller"
                            android:text="@string/state"
                            android:textAppearance="?android:attr/textAppearanceMedium">

                        </TextView>

                        <TextView
                            android:id="@+id/txt_state"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:background="@drawable/border_grey"
                            android:padding="5dp"
                            android:fontFamily="@font/aller"
                            android:text="@string/blank"
                            android:textSize="@dimen/text_size12"
                            android:gravity="center"
                            android:layout_weight="0.6"
                            android:textColor="@color/white"
                            android:textAppearance="?android:attr/textAppearanceMedium">

                        </TextView>



                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:background="@drawable/border_grey"
                            android:gravity="center"
                            android:textSize="@dimen/text_size12"
                            android:layout_weight="0.4"
                            android:textColor="@color/white"
                            android:fontFamily="@font/aller"
                            android:text="@string/country"
                            android:textAppearance="?android:attr/textAppearanceMedium">

                        </TextView>

                        <TextView
                            android:id="@+id/txt_country"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:background="@drawable/border_grey"
                            android:padding="5dp"
                            android:fontFamily="@font/aller"
                            android:text="@string/blank"
                            android:textSize="@dimen/text_size12"
                            android:gravity="center"
                            android:layout_weight="0.6"
                            android:textColor="@color/white"
                            android:textAppearance="?android:attr/textAppearanceMedium">

                        </TextView>



                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:background="@drawable/border_grey"
                            android:gravity="center"
                            android:textSize="@dimen/text_size12"
                            android:layout_weight="0.4"
                            android:textColor="@color/white"
                            android:fontFamily="@font/aller"
                            android:text="@string/pincode"
                            android:textAppearance="?android:attr/textAppearanceMedium">

                        </TextView>

                        <TextView
                            android:id="@+id/txt_pincode"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:background="@drawable/border_grey"
                            android:padding="5dp"
                            android:fontFamily="@font/aller"
                            android:text="@string/blank"
                            android:textSize="@dimen/text_size12"
                            android:gravity="center"
                            android:layout_weight="0.6"
                            android:textColor="@color/white"
                            android:textAppearance="?android:attr/textAppearanceMedium">

                        </TextView>



                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:background="@drawable/border_grey"
                            android:gravity="center"
                            android:textSize="@dimen/text_size12"
                            android:layout_weight="0.4"
                            android:textColor="@color/white"
                            android:fontFamily="@font/aller"
                            android:text="@string/cash"
                            android:textAppearance="?android:attr/textAppearanceMedium">

                        </TextView>

                        <TextView
                            android:id="@+id/txt_amount"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:background="@drawable/border_grey"
                            android:padding="5dp"
                            android:fontFamily="@font/aller"
                            android:text="@string/blank"
                            android:textSize="@dimen/text_size12"
                            android:gravity="center"
                            android:layout_weight="0.6"
                            android:textColor="@color/white"
                            android:textAppearance="?android:attr/textAppearanceMedium">

                        </TextView>



                    </TableRow>


                </TableLayout>

            </TableRow>

            <RelativeLayout
                android:id="@+id/rel_submit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_below="@+id/tabla_cabecera"
                android:layout_marginBottom="@dimen/margin_20"
                android:layout_marginStart="@dimen/margin_50">

                <Button
                    android:id="@+id/make_payment_btn"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/button_baground"
                    android:fontFamily="@font/aller"
                    android:text="@string/make_a_payment"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size12">

                </Button>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>