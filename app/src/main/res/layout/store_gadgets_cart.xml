<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/green">

    <LinearLayout
        android:id="@+id/lin_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_20"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/camera"
            android:layout_width="@dimen/margin_120"
            android:layout_height="@dimen/margin_90"
            android:src="@drawable/camera"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginStart="@dimen/margin_20">

            <TextView
                android:id="@+id/camera_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/camera_title"
                android:textColor="@color/white"
                android:fontFamily="@font/aller"
                android:textSize="@dimen/text_size11"/>

            <TextView
                android:id="@+id/camera_features"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/camera_title"
                android:fontFamily="@font/aller"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size10"
                android:layout_marginTop="@dimen/text_size10"
                android:text="@string/features"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/camera_features"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginEnd="@dimen/margin_20">

                <TextView
                    android:id="@+id/camera_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price"
                    android:fontFamily="@font/aller"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size11"/>

                <Button
                    android:id="@+id/button_book"
                    android:layout_width="@dimen/margin_100"
                    android:layout_height="@dimen/margin_30"
                    android:layout_marginStart="@dimen/margin_15"
                    android:background="@drawable/button_baground"
                    android:text="@string/book_now"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/allerbold"
                    android:textSize="@dimen/text_size10"/>

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@+id/lin_lay"
        android:alpha="0.2"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginBottom="@dimen/margin_10"
        android:background="@color/Fent_light_gray">

    </View>


</RelativeLayout>