<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rel_all_workshop"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="165dp"
    android:background="@color/white"
    android:layout_marginLeft="@dimen/margin_10"
    android:layout_marginRight="@dimen/margin_10"
    android:layout_marginBottom="@dimen/margin_20"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rel_img"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <ImageView
            android:id="@+id/blog_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/flight_img"
            android:scaleType="centerCrop">

        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_img"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_5">

        <TextView
            android:id="@+id/blog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/aller"
            android:text="@string/description"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size10" />

        <TextView
            android:id="@+id/workshop_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blog_name"
            android:layout_marginTop="@dimen/margin_5"
            android:fontFamily="@font/aller"
            android:text="@string/date"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size10" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/week_light_gray"
            android:layout_below="@id/workshop_date"
            android:layout_marginTop="@dimen/margin_5">

        </View>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_7"
            android:layout_marginTop="@dimen/margin_7"
            android:layout_below="@id/view">

                <TextView
                    android:id="@+id/txt_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aller"
                    android:textColor="@color/dcp_orange"
                    android:layout_marginTop="@dimen/margin_8"
                    android:textSize="@dimen/text_size10"
                    android:text="@string/amount">

                </TextView>


            <TextView
                android:id="@+id/button"
                android:layout_width="@dimen/margin_80"
                android:layout_height="@dimen/margin_30"
                android:fontFamily="@font/aller"
                android:textColor="@color/black"
                android:padding="@dimen/margin_5"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:layout_marginEnd="@dimen/margin_10"
                android:textSize="@dimen/text_size10"
                android:background="@drawable/book_now_btn"
                android:text="@string/book_now">

            </TextView>

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>